<Page
    x:Class="FluentLauncher.Views.InitialSetupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:FluentLauncher.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="38" />
        </Grid.RowDefinitions>
        <!--  Navigation tabs, centered  -->
        <StackPanel
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="12">
            <!--  简化后的按钮结构  -->
            <Button
                x:Name="TabLanguage"
                Width="180"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="OnTabClick"
                Tag="0">
                <TextBlock
                    x:Name="LangText"
                    FontSize="24"
                    Foreground="#999999"
                    Text="语言选择" />
            </Button>
            <Button
                x:Name="TabMinecraft"
                Width="180"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="OnTabClick"
                Tag="1">
                <TextBlock
                    x:Name="MinecraftText"
                    FontSize="24"
                    Foreground="#999999"
                    Text="Minecraft目录" />
            </Button>
            <Button
                x:Name="TabAccount"
                Width="180"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="OnTabClick"
                Tag="2">
                <TextBlock
                    x:Name="AccountText"
                    FontSize="24"
                    Foreground="#999999"
                    Text="用户登录" />
            </Button>
            <Button
                x:Name="TabJDK"
                Width="180"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="OnTabClick"
                Tag="3">
                <TextBlock
                    x:Name="JDKText"
                    FontSize="24"
                    Foreground="#999999"
                    Text="JDK路径" />
            </Button>
        </StackPanel>
        <!--  Content area  -->
        <ContentControl
            x:Name="ContentHost"
            Grid.Row="1"
            Padding="40"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch" />
        <!--  Navigation buttons  -->
        <Grid Grid.Row="2" Height="32">
            <Button
                x:Name="PreviousButton"
                HorizontalAlignment="Left"
                Click="OnPreviousClick"
                Content="上一步" />
            <Button
                x:Name="NextButton"
                HorizontalAlignment="Right"
                Click="OnNextClick"
                Content="下一步" />
        </Grid>
    </Grid>
</Page>