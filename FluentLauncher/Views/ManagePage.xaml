<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="FluentLauncher.Views.ManagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FluentLauncher.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="ContactListViewTemplate" x:DataType="local:VersionListDate">
            <controls:SettingsExpander Header="Settings Expander with ItemsSource">
                <controls:SettingsExpander.HeaderIcon>
                    <FontIcon Glyph="&#xEA37;" />
                </controls:SettingsExpander.HeaderIcon>
                <controls:SettingsExpander.ItemsFooter>
                    <StackPanel
                        Padding="8"
                        Background="{StaticResource CardBackgroundFillColorSecondaryBrush}"
                        Spacing="4">
                        <controls:SettingsCard
                            Description="{x:Bind GameName}"
                            Header="{x:Bind GameVersion}"
                            IsClickEnabled="True" />
                        <controls:SettingsCard
                            Header="Hiding the ActionIcon"
                            IsActionIconVisible="False"
                            IsClickEnabled="True" />
                    </StackPanel>
                </controls:SettingsExpander.ItemsFooter>
            </controls:SettingsExpander>
        </DataTemplate>
        <Style TargetType="ListViewItem">
            <Setter Property="Padding" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
        </Style>
    </Page.Resources>
    <StackPanel
        VerticalAlignment="Top"
        Orientation="Vertical"
        Spacing="16">
        <StackPanel
            Padding="0,16,0,0"
            Orientation="Horizontal"
            Spacing="8">
            <Button Content="添加游戏" Style="{ThemeResource AccentButtonStyle}">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="14" Glyph="" />
                            <TextBlock x:Uid="Instances_DefaultPage_InstallText" Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button
                Content="导入整合包"
                IsEnabled="False"
                Style="{ThemeResource AccentButtonStyle}">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="14" Glyph="" />
                            <TextBlock x:Uid="Instances_DefaultPage_ImportButton" Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </StackPanel>
        <ListView
            BorderBrush="Transparent"
            ItemTemplate="{StaticResource ContactListViewTemplate}"
            ItemsSource="{x:Bind Versions}"
            SelectionMode="None" />
    </StackPanel>

</Page>