<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:media="using:Microsoft.UI.Xaml.Media">

    <!--  字体大小  -->
    <x:Double x:Key="SmallFontSize">12</x:Double>
    <x:Double x:Key="MediumFontSize">16</x:Double>
    <x:Double x:Key="LargeFontSize">24</x:Double>
    <x:Double x:Key="ExtraLargeFontSize">32</x:Double>
    <x:Double x:Key="HeaderFontSize">48</x:Double>

    <!--  常用 TextBlock 样式  -->
    <Style x:Key="DefaultTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="TextAlignment" Value="{StaticResource LeftTextAlignment}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>
    <Style x:Key="ArchiveTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0,32,0,12" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>


</ResourceDictionary>